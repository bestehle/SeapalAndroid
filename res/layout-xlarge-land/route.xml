<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/routeTop"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:columnCount="3"
    	android:rowCount="2">
        
        <TextView 
            android:id="@+id/routeNameLabel"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="@string/routeName"
    		android:textAppearance="?android:attr/textAppearanceLarge"
    		android:layout_column="0"
    		android:layout_row="0"/>
        
        <EditText 
            android:id="@+id/routeNameEdit"
            android:layout_width="845dp"
    		android:layout_height="wrap_content"
    		android:layout_column="1"
    		android:layout_row="0"
    		android:inputType="text"/>
        
        <Spinner 
            android:id="@+id/routesSpinner"
            android:layout_width="150dp"
        	android:layout_height="wrap_content"
        	android:layout_column="0"
    		android:layout_row="1"/>
        
        <Spinner 
            android:id="@+id/addMarkSpinner"
            android:layout_width="150dp"
        	android:layout_height="wrap_content"
        	android:layout_column="1"
    		android:layout_row="1"/>
              
    </GridLayout>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
        
        <RelativeLayout 
            android:id="@+id/routeItemList"
            android:layout_width="1200dp"
    		android:layout_height="620dp"/>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
            
            <Button 
            	android:id="@+id/upButton"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="fill_horizontal"
        		android:text="@string/up"
        		android:gravity="center_vertical" />
            
            <Button 
            	android:id="@+id/editButton"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="fill_horizontal"
        		android:text="@string/edit"
        		android:gravity="center_vertical" />
            
            <Button 
            	android:id="@+id/downButton"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="fill_horizontal"
        		android:text="@string/down"
        		android:gravity="center_vertical" />
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>